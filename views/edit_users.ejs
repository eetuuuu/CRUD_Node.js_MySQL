<%include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/users/edit/<%=data[0].user_id%>">
                 <table cellpadding="11">
                 <tr>
                    <td class="label">Telephone</td>
                    <td> 
                        <input type="text" name="user_tel" value="<%=data[0].user_tel%>" required >
                    </td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Name</td>
                    <td valign="top"> 
                       <textarea name="user_name" required cols="30" rows="5"><%=data[0].user_name%></textarea>
                    </td>
                 </tr>
                 <tr>
                    <td class="label">Password</td>
                    <td> 
                       <input type="text" value="<%=data[0].user_passwd%>" name="user_passwd" required>
                    </td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%include layouts/footer.ejs %>

