<%include layouts/header.ejs %>

        <div class="page-data">
         <div class="data-btn">
           <button onClick="addUser();">+Add</button>
           <button onClick="searchUser();">@Search</button>
         </div>
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>UserId</th>
                    <th>UserTelephone</th>
                    <th>UserName</th>
                    <th>UserPassword</th>
                    <th width="120px">Action</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                  <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].user_id%></td>
                    <td><%=data[i].user_tel%></td>
                    <td><%=data[i].user_name%></td>
                    <td><%=data[i].user_passwd%></td>
                    <td>
                        <a class="a-inside edit" href="../users/edit/<%=data[i].user_id%>">Edit</a>
                        <a class="a-inside delete" href="../users/delete/<%=data[i].user_id%>">Delete</a>
                    </td>
                 </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
            <% } %>
                
            </table>
         </div>
        </div>
        
<%- include layouts/footer.ejs %>

